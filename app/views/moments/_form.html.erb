
<div style="text-align:center;">

<% if @moment.errors.any? %>
    <h2>There were errors saving your moment</h2>
	   <ul>
	     <% @moment.errors.full_messages.each do |msg| %>
	       <li><%= msg %></li>
	     <% end %>
	   </ul>
<% end %>

</div>

<%= form_for @moment, :html => { :class => "formclass" } do |f| %>

	<div>
		<%= f.label :title, "Title:", :class =>"label-class" %><br>
		<%= f.text_field :title %>
	</div>

	<div>
		<%= f.label :song, "Song:" %><br>
		<%= f.text_field :song %>
	</div>

	<div>
		<%= f.label :blog, "Description:" %><br>
		<%= f.text_area :blog %>
	</div>


	<div>
	<%= f.label :image  %>	
	<%= f.file_field :image %>
	</div>

	<br>
	<%= f.submit "Create Moment", :class =>"btn btn-danger" %>

<% end %>


	





