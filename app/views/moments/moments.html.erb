<div class="container" style="text-align:center;">

<h1> My Moments </h1>

<a class="btn btn-danger btn-large" href="<%= new_moment_path %>">Add Moment</a>


    <div class="row">

      <ul class="thumbnails">

        <% @moments.each do |moment| %>
        <li class="span6" style=" padding:5px; border-radius:5px; margin-top:15px; text-align:center;">

          <div class="title">

         	   <h2><a href="<%= moment_path(moment)%>"><%= moment.title %></a></h2>

          	</div>

        	<div class="image">

          	 	<h2><%= moment.image %></h2>

           </div>

          <div class="blog">
            
        	   <p><%= moment.blog %></p>

           </div> 


          <div class="song">

         	   <h3><%= moment.song %></h3>

         	</div>
           	 
            <br>

             <a href="<%= edit_moment_path( moment ) %>">Edit</a>

          <% end %>

        </li>

        </ul>

    </div>

  </div>

