<div class="container" style="text-align:center;">

  <h1> All Moments </h1>

  <a class="btn btn-danger btn-large" href="<%= new_moment_path %>">Add Moment</a>
     <div class="row">
      <div class="span3">
      </div>

     <div class="momentlist span6">
        <ul class="thumbnails">

          <% @moments.each do |moment| %>
             <li class="span6">

              <div class="title">
             	   <h2><a href="<%= moment_path(moment)%>"><%= moment.title %></a></h2>
              </div>

              <!--  <div class ="post">
                 <h4>
                    posted by <a href = "<%= user_path( moment.user ) %>"><%= moment.user.email %></a> <%= time_ago_in_words( moment.created_at ) %> ago
                </h4>
               </div> -->

              <% if moment.image.present? %>
              <div>
                  <img src="<%= moment.image.url %>"/>
              </div>
              <% end %>

              <div class="blog">
                  <h4><%= moment.blog %></h4>
              </div> 

              <div class="song">
                 <h3><%= moment.song %></h3>
              </div>
                 <% if moment.song_url.present? %>
                    <%==  @client.get('/oembed', :url => moment.song_url)['html'] %>
                 <% else %>
                    <%= moment.song_url %>
                 <% end %>
              
              <h4><a href="<%= edit_moment_path( moment ) %>" class ="btn btn-inverse">Edit</a></h4>

              <% end %>
            </li>
          </ul>
        </div>
     </div>
</div>

